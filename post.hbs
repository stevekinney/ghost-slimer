{{!< default}}

{{> header}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

            <header class="post">
                <h1 class="post-title">{{{title}}}</h1>
            </header>

            <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM Do, YYYY'}}</time> {{tags prefix="on " separator=" | "}}</span>

            <section class="post-content">
                {{content}}
            </section>

        {{/post}}

    </article>

</main>
